{
  "name": "dev-tools-mac",
  "version": "1.0.2",
  "description": "开发者工具桌面应用",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node scripts/dev.js",
    "dev-main": "nodemon --watch src/main --exec electron .",
    "dev-renderer": "vite",
    "build": "node scripts/build.js",
    "build-only": "vite build",
    "build-direct": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "tools",
    "developer"
  ],
  "author": "开发者",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons-vue": "^7.0.1",
    "ant-design-vue": "^4.2.6",
    "canvas": "^3.2.0",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.14",
    "file-saver": "^2.0.5",
    "node-forge": "^1.3.1",
    "prettier": "^3.6.2",
    "qrcode": "^1.5.4",
    "qrcode-reader": "^1.0.4"
  },
  "devDependencies": {
    "@heroicons/vue": "^2.0.18",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^5.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "highlight.js": "^11.9.0",
    "nodemon": "^3.0.2",
    "pinia": "^2.1.7",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "vue-tsc": "^3.0.6"
  },
  "build": {
    "appId": "com.devtools.mac",
    "productName": "开发者工具",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon_512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
